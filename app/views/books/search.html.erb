<h3>Search Results</h3>  

<% if @results.any? %>
    <div id="books">
    <table class="table table-striped table-hover border">
        <thead>
            <tr>
                <th scope="col">Book</th>
                <th scope="col">Author</th>
            </tr>
        </thead>
        <% @results.each do |result| %>
            <tbody>
                <tr>
                    <td><%= link_to result.title, result, class:"text-decoration-none" %></td>
                    <td><%= result.author %></td>
                </tr>
            </tbody>
        <% end %>
    </table>
    
    </div>
<% else %>
    <div class="card">
        <div class="card-body">
            <p class="card-text">No book or author found...</p>
            <%= link_to "Back", books_path, class:"btn btn-secondary"%>
        </div>
    </div>
<% end %>