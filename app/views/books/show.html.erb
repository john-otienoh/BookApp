<% cache @product do %>
    <div class="card">
    <div class="card-body">
        <h5 class="card-title"><%= @book.title %></h5>
        <p class="card-text">Was written by <%= @book.author%>.</p>
        <%= link_to "Back", books_path, class:"btn btn-secondary"%>
        <%= link_to "Edit", edit_book_path(@book), class:"btn btn-secondary" %>
        <p></p>
        <%= button_to "Delete", @book, method: :delete, data: { turbo_confirm: "Are you sure?" }, class:"btn btn-danger" %>
    </div>
    </div>
<% end %>